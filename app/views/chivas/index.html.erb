<div class="container-fluid" ng-controller="ChivasHomeCtrl">
  <div class="row">
    <div class="col-sm-6 col-md-6">
      <div class="row chivas-headline">
        <%= image_tag("chivas.gif") %> Chivas USA
      </div>
      <div class="team-header-sub">
        <a href="http://www.cdchivasusa.com/">Official Team Site</a> <span class="pipe">|</span>
        <a href="http://www.cdchivasusa.com/players">Team Roster</a> <span class="pipe">|</span>
        <a href="http://www.stubhubcenter.com/">Stadium</a> <span class="pipe">|</span>
        Social Feeds:
        <a href="http://instagram.com/chivasusa"> <i class="fa fa-instagram"></i></a> 
        <a href="http://twitter.com/cdchivasusa"> <i class="fa fa-twitter"></i></a>       
        <a href="https://plus.google.com/communities/108224108472758816068"> <i class="fa fa-google-plus"></i></a>    
        <a href="http://www.facebook.com/chivasusa"> <i class="fa fa-facebook"></i></a>    
        <a href="http://www.pinterest.com/chivasusa/"> <i class="fa fa-pinterest"></i></a>         
        <a href="http://www.youtube.com/user/chivasusa1908"> <i class="fa fa-youtube"></i></a>         
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">Official Site</div>
      <div ng-repeat="story in official | orderBy: '-published' | limitTo: 12">
        <div class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">ESPN</div>
      <div ng-repeat="story in espn | orderBy: '-published' | limitTo: 12">
        <div class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">Los Angeles Times</div>
      <div ng-repeat="story in latimes | orderBy: '-published' | limitTo: 10">
        <div class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">The Goat Parade</div>
      <div ng-repeat="story in the_goat_parade | orderBy: '-published' | limitTo: 10">
        <div class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Twitter and Instagram -->
  <div class="row">
    <div class="col-sm-6 col-md-6" ng-controller="ChivasTweetsCtrl" >
      <div class="team-header">
        <i class="fa fa-twitter"></i>
        <a href="http://twitter.com/cdchivasusa" target="blank"> Twitter Feed</a>
      </div>
      <div ng-repeat="tweet in tweets |  filter: searchTweet | limitTo: 10">
        <p class="story">
          <a href="http://twitter.com/{{tweet.user.screen_name}}/status/{{tweet.id_str}}" target="blank">{{tweet.user.screen_name}}: {{tweet.text}}</a>
          <span class="source">({{tweet.created_at | date: 'short'}})</span>
        </p>
      </div>
    </div>
    <div class="col-sm-6 col-md-6" ng-controller="ChivasInstagramCtrl" >
      <div class="team-header">
        <i class="fa fa-instagram"></i>
        <a href="http://instagram.com/chivasusa" target="blank"> Instagram Feed</a>
      </div>
      <div ng-repeat="image in instagram | limitTo: 12">
        <p class="instagram">
          <a href="{{image.link}}" target="blank"><img ng-src="{{image.images.thumbnail.url}}" alt="{{image.caption.text}}" title="{{image.caption.text}}"></a>
        </p>
      </div>
    </div>
  </div>
  <!-- End Twitter and Instagram -->

  <!-- YouTube -->
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12" ng-controller="ChivasYoutubeCtrl" >
      <div class="team-header">
        <i class="fa fa-youtube"></i> 
        <a href="http://www.youtube.com/user/chivasusa1908" target="blank"> YouTube Feed</a>
      </div>
      <div ng-repeat="video in youtube.videos | orderBy: '-published_at' | limitTo: 18">
        <p class="youtube">
          <a href="{{video.player_url}}" target="blank"><img ng-src="{{video.thumbnails[0].url}}" popover="({{video.published_at | date: 'short'}}) {{video.title | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter"></a>
        </p>
      </div>
    </div>
  </div>
  <!-- End YouTube -->
</div>