<div class="container">
  <div class="row">
    <div class="notice"><%= notice %></div>
    <div class="alert"><%= alert %></div>
  </div>
</div>

<div class="container" id="social-container">
  <div class="row" id="sign-in-header">
    <div class="col-xs-12 col-lg-12">
      <h4>Sign Up For An Account</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6" id="sign-in">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div><%= f.submit "Sign up", :class=>"btn btn-default" %></div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-6" id="sign-in-social">
      Or sign up with a social account...
      <div class="social-button"> <%= link_to image_tag("facebook.png") + "Sign Up With Facebook", user_omniauth_authorize_path(:facebook) %></div>
      <div class="social-button"> <%= link_to image_tag("twitter.png") + "Sign Up With Twitter", user_omniauth_authorize_path(:twitter) %></div>
      <div class="social-button"> <%= link_to image_tag("google.png") + "Sign Up With Google", user_omniauth_authorize_path(:google_oauth2) %></div>
      <div class="social-button"> <%= link_to image_tag("linkedin.png") + "Sign Up With Linkedin", user_omniauth_authorize_path(:linkedin) %></div>  
    </div>
  </div>
</div>