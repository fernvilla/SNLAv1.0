<div class="container">
  <div class="row">
    <div class="notice"><%= notice %></div>
    <div class="alert"><%= alert %></div>
  </div>
</div>

<div class="container" id="social-container">
  <div class="row" id="sign-in-header">
    <div class="col-xs-12 col-lg-12">
      <h4>Sign In To Your Account</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6" id="sign-in">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %></div>

        <div><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div><%= f.submit "Sign in", :class=>"btn btn-default" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-6" id="sign-in-social">
      Or sign in with a social account...
      <div class="social-button"> <%= link_to image_tag("facebook.png") + "Sign In With Facebook", user_omniauth_authorize_path(:facebook) %></div>
      <div class="social-button"> <%= link_to image_tag("twitter.png") + "Sign In With Twitter", user_omniauth_authorize_path(:twitter) %></div>
      <div class="social-button"> <%= link_to image_tag("google.png") + "Sign In With Google", user_omniauth_authorize_path(:google_oauth2) %></div>
      <div class="social-button"> <%= link_to image_tag("linkedin.png") + "Sign In With Linkedin", user_omniauth_authorize_path(:linkedin) %></div>   
    </div>
  </div>
</div>