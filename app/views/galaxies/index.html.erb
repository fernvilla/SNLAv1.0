<div class="container-fluid" ng-controller="GalaxyHomeCtrl">
  <div class="row">
    <div class="col-sm-6 col-md-6">
      <div class="row galaxy-headline">
        <%= image_tag("galaxy.gif") %> Los Angeles Galaxy
      </div>
      <div class="team-header-sub">
        <a href="http://www.lagalaxy.com/">Official Team Site</a> <span class="pipe">|</span>
        <a href="http://www.lagalaxy.com/players">Team Roster</a> <span class="pipe">|</span>
        <a href="http://www.stubhubcenter.com">Stadium</a> <span class="pipe">|</span>
        Social Feeds:
        <a href="http://instagram.com/lagalaxy"> <i class="fa fa-instagram"></i></a> 
        <a href="http://twitter.com/lagalaxy"> <i class="fa fa-twitter"></i></a>            
        <a href="http://plus.google.com/u/0/+lagalaxy"> <i class="fa fa-google-plus"></i></a>    
        <a href="http://www.facebook.com/lagalaxy"> <i class="fa fa-facebook"></i></a>    
        <a href="http://www.pinterest.com/lagalaxy/"> <i class="fa fa-pinterest"></i></a>                                   
        <a href="http://www.youtube.com/user/lagalaxy"> <i class="fa fa-youtube"></i></a>                  
        <a href="https://www.flickr.com/photos/thelagalaxy/"> <i class="fa fa-flickr"></i></a>                  
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">Official Site</div>
      <div ng-repeat="story in official | orderBy: '-published' | limitTo: 10">
        <div class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">ESPN</div>
      <div ng-repeat="story in espn | orderBy: '-published' | limitTo: 12">
        <div class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">Los Angeles Times</div>
      <div ng-repeat="story in latimes | orderBy: '-published' | limitTo: 10">
        <div class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">LAG Confidential</div>
      <div ng-repeat="story in lag_confidential | orderBy: '-published' | limitTo: 12">
        <div class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Twitter and Instagram -->
  <div class="row">
    <div class="col-sm-6 col-md-6" ng-controller="GalaxyTweetsCtrl" >
      <div class="team-header">
        <i class="fa fa-twitter"></i>
        <a href="http://twitter.com/lagalaxy" target="blank"> Twitter Feed</a>
      </div>
      <div ng-repeat="tweet in tweets |  filter: searchTweet | limitTo: 10">
        <p class="story">
          <a href="http://twitter.com/{{tweet.user.screen_name}}/status/{{tweet.id_str}}" target="blank">{{tweet.user.screen_name}}: {{tweet.text}}</a>
          <span class="source">({{tweet.created_at | date: 'short'}})</span>
        </p>
      </div>
    </div>
    <div class="col-sm-6 col-md-6" ng-controller="GalaxyInstagramCtrl" >
      <div class="team-header">
        <i class="fa fa-instagram"></i>
        <a href="http://instagram.com/lagalaxy" target="blank"> Instagram Feed</a>
      </div>
      <div ng-repeat="image in instagram | limitTo: 12">
        <p class="instagram">
          <a href="{{image.link}}" target="blank"><img ng-src="{{image.images.thumbnail.url}}" alt="{{image.caption.text}}" title="{{image.caption.text}}"></a>
        </p>
      </div>
    </div>
  </div>
  <!-- End Twitter and Instagram -->

