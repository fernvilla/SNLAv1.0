<div class="container-fluid" ng-controller="LakersHomeCtrl">
  <div class="row">
    <div class="col-md-12">
      <div class="row lakers-headline">
        <%= image_tag("lakers.gif") %> Los Angeles Lakers
      </div>
      <div class="team-header-sub">
        <a href="http://lakers.com">Official Team Site</a> <span class="pipe">|</span>
        <a href="http://www.nba.com/lakers/roster">Team Roster</a> <span class="pipe">|</span>
        <a href="http://staplescenter.com">Stadium</a> <span class="pipe">|</span>
        Social Feeds:
        <a href="http://instagram.com/lakers"> <i class="fa fa-instagram"></i></a> 
        <a href="http://twitter.com/lakers"> <i class="fa fa-twitter"></i></a>    
        <a href="http://lakers.tumblr.com"> <i class="fa fa-tumblr"></i></a>    
        <a href="http://plus.google.com/+LosAngelesLakers"> <i class="fa fa-google-plus"></i></a>    
        <a href="http://www.facebook.com/losangeleslakers"> <i class="fa fa-facebook"></i></a>    
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="team-header">Official Site</div>
      <div ng-repeat="story in official | orderBy: '-published' | limitTo: 14">
        <div class="story">
          <a href="{{story.url}}" target="blank" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}})</span>
        </div>
      </div>
    </div>
