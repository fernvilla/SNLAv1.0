<div class="container-fluid">
  <div class="row preps-headline">
    Los Angeles High School Sports
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class=" col-sm-5 col-md-5" ng-controller="PrepsCtrl" >
      Search Stories: <input ng-model="searchStory"><br><br>
      <div ng-repeat="story in stories | orderBy:'-published' |filter:searchStory">
        <p class="story">
          <a href="{{story.url}}" popover="{{story.summary | limitTo: 150}}..." popover-placement="bottom" popover-trigger="mouseenter" target="blank">{{story.title}}</a>
          <span class="source">({{story.published | date: 'short'}}, Source: {{story.source}})</span>
        </p>
      </div>
    </div>
  </div>
</div>